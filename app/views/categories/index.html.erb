<% if current_user %>
  <div class="">
    <% unless @categories.empty? %>
      <% @categories.each do |category| %>
        <div class="">
          <div class="">
            <div>
              <img src=<%= category.icon %> class="" alt="category icon">
            </div>
            <div class="">
              <div class="">
                <%= link_to "#{category.name}", category_path(category.id), class:"" %>
                <p class=""><small class="text-muted"><%=category.created_at.strftime("%d %b %Y")%></small></p>
              </div> 
              <p class="">&<%= category.expenses.sum(:amount) %></p>             
        </div>
      <% end %>
    <% else %>
      <h3 class="">You don't have any categories yet.</h2>    
    <% end %>    
  </div>
  <div>
    <%= link_to 'Add a new Category', new_category_path, class: "scan-button" %>
    </div>
<% else %>
  <%= render partial: "shared/background" %>
<% end %> 