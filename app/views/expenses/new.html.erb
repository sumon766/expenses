<div class="">
  <h2 class="text-center flex-grow-1">Create a new transaction</h2>
</div>

<div class="">
  <h1></h1>
  <%= form_with model: @expense, url: expenses_path, method: :post, :html => {:class => "w-75 mt-4"} do |form| %>
    <div class="form-floating mb-3 w-100">
      <%= form.text_field :name, class:"form-control", id:"floatingInput", placeholder:"Transaction name" %>
      <%= form.label :name, 'Name', class: "form-label" %>
    </div>
    <div class="form-floating mb-3 w-100">
      <%= form.number_field :amount, class:"form-control", id:"floatingInput", placeholder:"Transaction amount"  %>
      <%= form.label :amount, 'Amount', class: "form-label" %>
    </div>
    <%= form.label :category_id, 'Please select at least one category', class: "form-label" %>
    <%= form.select :category_id, Category.order(:name).where(user:current_user).pluck(:name, :id), {}, {:multiple => true, required:true, :id => "categories", :class => "form-select mb-3" } %>
    <%= form.submit 'Create transaction', class: "btn green btn-outline-info text-white" %>
  <% end %>
</div>